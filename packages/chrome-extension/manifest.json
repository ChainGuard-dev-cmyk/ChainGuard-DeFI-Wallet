{
  "manifest_version": 3,
  "name": "Chain Guard",
  "version": "0.1.0",
  "description": "AI-powered security layer for Solana blockchain transactions",
  "permissions": [
    "storage",
    "alarms",
    "activeTab",
    "webRequest"
  ],
  "host_permissions": [
    "https://*.solana.com/*",
    "https://*.helius-rpc.com/*",
    "https://*.quicknode.pro/*"
  ],
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup/index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/injector.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["injected.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
